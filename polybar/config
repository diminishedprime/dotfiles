[bar/top]
enable-ipc = true
wm-name = polybar-top
monitor = eDP-1
bottom = true
override-redirect = false
width = 100%
height = 3.0%
foreground = #002b36
locale = en_US.UTF-8
font-0 = Source Code Pro:size=30;5
font-1 = FontAwesome:size=33:weight=Regular;7
modules-left = powermenu
modules-right = wireless-network battery volume clock backlight

[module/backlight]
type = custom/ipc
format-forground = #111111
format-background = #dc322f
format-padding = 1
format =  <output>
hook-0 = light -A 1% && light | rev | cut -c 4- | rev
hook-1 = light -U 1% && light | rev | cut -c 4- | rev
hook-2 = light -A 10% && light | rev | cut -c 4- | rev
hook-3 = light -U 10% && light | rev | cut -c 4- | rev
hook-4 = light | rev | cut -c 4- | rev
initial = 3
scroll-up = echo hook:module/backlight1 > /tmp/polybar_mqueue.%pid%
scroll-down = echo hook:module/backlight2 > /tmp/polybar_mqueue.%pid%
click-left = echo hook:module/backlight3 > /tmp/polybar_mqueue.%pid%
click-right = echo hook:module/backlight4 > /tmp/polybar_mqueue.%pid%

