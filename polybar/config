label-focused = %name%
label-focused-background = #DC322F
label-dimmed-focused = %name%
label-occupied = %name%
label-occupied-underline = #DC322F
label-empty = %name%

[module/powermenu]
type = custom/menu
format-padding = 2
format-background = #000
label-open = 
label-close = 
label-separator = " - "
menu-0-0 = Terminate WM
menu-0-0-exec = bspc quit -1
menu-0-1 = Reboot
menu-0-1-exec = sudo reboot
menu-0-2 = Power off
menu-0-2-exec = sudo poweroff
menu-0-3 = Suspend
menu-0-3-exec = sudo systemctl suspend

[module/wireless-network]
type = internal/network
interface = wlp58s0
interval = 2.0
ping-interval = 10
format-connected = <label-connected>
format-connected-background = #6c71c4
label-connected = "  %signal%% %local_ip% "
label-disconnected =  not connected
